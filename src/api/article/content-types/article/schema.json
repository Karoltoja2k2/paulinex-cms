{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Create your blog content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "slug": {
      "type": "uid",
      "required": true
    },
    "decorationTitle": {
      "type": "string",
      "required": true
    },
    "metaTitle": {
      "type": "string",
      "maxLength": 60,
      "required": true
    },
    "metaDescription": {
      "type": "string",
      "maxLength": 159,
      "required": true
    },
    "decorationDescription": {
      "type": "string",
      "required": true
    },
    "coverImg": {
      "type": "component",
      "component": "shared.img",
      "repeatable": false,
      "required": true
    },
    "headerSection": {
      "type": "component",
      "component": "shared.section",
      "repeatable": false,
      "required": true
    },
    "sections": {
      "type": "dynamiczone",
      "components": [
        "shared.section",
        "shared.section-with-image"
      ],
      "required": true
    }
  }
}
