{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Create your blog content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "slug": {
      "type": "uid",
      "required": true
    },
    "DecorationTitle": {
      "type": "string",
      "required": true
    },
    "MetaTitle": {
      "type": "string",
      "maxLength": 60,
      "required": true
    },
    "MetaDescription": {
      "type": "string",
      "maxLength": 159,
      "required": true
    },
    "DecorationDescription": {
      "type": "string",
      "required": true
    },
    "CoverImg": {
      "type": "component",
      "component": "shared.img",
      "repeatable": false,
      "required": true
    },
    "HeaderSection": {
      "type": "component",
      "component": "shared.section",
      "repeatable": false,
      "required": true
    },
    "blocks": {
      "type": "dynamiczone",
      "components": [
        "shared.section-with-image-on-left",
        "shared.section"
      ],
      "required": true
    }
  }
}
